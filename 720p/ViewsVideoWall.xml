<includes>
<!-- ===================================================================================== -->
<!-- =================================== WALL VIEW ID 513 ================================ -->
<!-- ============================= Movies, TV Shows top level============================= -->
  <include name="WallView">
    <control type="group">
    <visible>Control.IsVisible(513)</visible>
      <control type="image"> <!-- bottom bar background -->
        <posx>0</posx>
        <posy>130r</posy>
        <width>1280</width>
        <height>700</height>
        <aspectratio>stretch</aspectratio>
         <texture>rightlistbackground.png</texture>
      </control>
      <control type="image"> <!-- bottom bar background -->
        <posx>0</posx>
        <posy>50r</posy>
        <width>1280</width>
        <height>700</height>
        <aspectratio>stretch</aspectratio>
         <texture>rightlistbackground.png</texture>
        <visible>Container.Content(Movies)</visible>
      </control>
      <control type="image"> <!-- darken the background a bit -->
        <posx>0</posx>
        <posy>0</posy>
        <width>1280</width>
        <height>720</height>
        <aspectratio>stretch</aspectratio>
         <texture>black-back3.png</texture>
      </control>
      <control type="image">
        <posx>640</posx>
        <posy>530</posy>
        <width>40</width>
        <height>64</height>
        <aspectratio>keep</aspectratio>
        <texture>downarrowNF.png</texture>
      </control>
      <control type="image">
        <posx>640</posx>
        <posy>60</posy>
        <width>40</width>
        <height>64</height>
        <aspectratio>keep</aspectratio>
        <texture flipy="true">downarrowNF.png</texture>
      </control>
      <!-- wall panel -->
      <control type="panel" id="513">
        <posx>65</posx>
        <posy>110</posy>
        <width>1250</width>
        <height>435</height>
        <onleft>4</onleft>
        <onright>513</onright>
        <onup>513</onup>
        <ondown>513</ondown>
        <viewtype label="WallView">panel</viewtype>
        <orientation>vertical</orientation>
        <pagecontrol>60</pagecontrol>
        <scrolltime>200</scrolltime>
        <preloaditems>1</preloaditems>
        <visible>Container.Content(Movies) | Container.Content(TVShows)</visible>
        <itemlayout height="216" width="144">
          <control type="group">
            <posx>0</posx>
            <posy>0</posy>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>144</width>
              <height>216  </height>
              <bordersize>5</bordersize>
              <aspectratio>stretch</aspectratio>
              <fadetime>200</fadetime>
              <texture background="true" diffuse="maskposter.png">$INFO[Listitem.Icon]</texture>
            </control>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>144</width>
              <height>216  </height>
              <bordersize>5</bordersize>
              <aspectratio>stretch</aspectratio>
              <fadetime>200</fadetime>
              <texture diffuse="maskposter.png">GlassOverlay2.png</texture>
            </control>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>144</width>
              <height>216  </height>
              <bordersize>5</bordersize>
              <aspectratio>stretch</aspectratio>
              <fadetime>200</fadetime>
              <texture>border-poster.png</texture>
            </control>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>144</width>
              <height>216  </height>
              <bordersize>5</bordersize>
              <aspectratio>stretch</aspectratio>
              <fadetime>200</fadetime>
              <texture diffuse="maskposter.png">black-back3.png</texture>
            </control>
          </control>    
        </itemlayout>
        <focusedlayout height="323" width="225">
          <control type="group">
            <posx>0</posx>
            <posy>0</posy>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>144</width>
              <height>216  </height>
              <bordersize>5</bordersize>
              <aspectratio>stretch</aspectratio>
              <fadetime>200</fadetime>
              <texture background="true" diffuse="maskposter.png">$INFO[Listitem.Icon]</texture>
            </control>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>144</width>
              <height>216  </height>
              <bordersize>5</bordersize>
              <aspectratio>stretch</aspectratio>
              <fadetime>200</fadetime>
              <texture diffuse="maskposter.png">GlassOverlay2.png</texture>
            </control>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>144</width>
              <height>216  </height>
              <bordersize>5</bordersize>
              <aspectratio>stretch</aspectratio>
              <fadetime>200</fadetime>
              <texture diffuse="maskposter.png">folder-focuswhiteroundedportrait.png</texture>
            </control>
          </control>  
        </focusedlayout>
      </control>    
      <!-- Movie info down thebottom -->  
      <control type="group">
        <posx>20</posx>
        <posy>360</posy>
        <visible>Container.Content(Movies)</visible>
        <control type="group">
          <posx>50</posx>
          <posy>270</posy>
          <control type="label">
            <description>Year and duration Label</description>
            <posx>0</posx>
            <posy>55</posy>
            <width>320</width>
            <height>25</height>
            <label>[COLOR=orange]$INFO[ListItem.Year]  [/COLOR]$INFO[ListItem.Duration]</label>
            <align>left</align>
            <aligny>center</aligny>
            <font>cirrus_40</font>
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
            <visible>SubString(ListItem.Duration,min)</visible>
          </control>
          <control type="label">
            <description>Year and duration Label</description>
            <posx>0</posx>
            <posy>55</posy>
            <width>320</width>
            <height>25</height>
            <label>[COLOR=orange]$INFO[ListItem.Year]  [/COLOR]$INFO[ListItem.Duration] mins</label>
            <align>left</align>
            <aligny>center</aligny>
            <font>cirrus_40</font>
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
            <visible>!SubString(ListItem.Duration,min)</visible>
          </control>
          <control type="label">
            <description>Genre label</description>
            <posx>310</posx>
            <posy>-35</posy>
            <width>800</width>
            <height>25</height>
            <label>$INFO[ListItem.Genre]</label>
            <align>left</align>
            <aligny>center</aligny>
            <font>cirrus_24</font>
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
          </control>
          <control type="label">
            <description>title label</description>
            <posx>310</posx>
            <posy>0</posy>
            <width>800</width>
            <height>25</height>
            <label>$INFO[ListItem.Title]</label>
            <align>left</align>
            <aligny>center</aligny>
            <font>cirrus_35</font>
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
          </control>
        </control>
        <control type="image">
          <width>170</width>
          <height>50</height>
          <posx>480</posx>
          <posy>50r</posy>
          <aspectratio>keep</aspectratio>
          <align>right</align>
          <aligny>bottom</aligny>
          <texture>$INFO[listitem.Studio,flagging/studios/,.png]</texture>
        </control>
        <control type="grouplist"> <!-- MPAA Rating -->
          <description>MPAA Rating Flagging Images</description>
          <posx>50</posx>
          <posy>245</posy>
          <width>249</width>
          <height>57</height>
          <align>right</align>
          <itemgap>0</itemgap>
          <orientation>horizontal</orientation>
          <include>VideoMPAAFlaggingConditions</include>
        </control>
        <control type="grouplist">
          <description>Media Codec Flagging Images</description>
          <posx>620r</posx>
          <posy>323</posy>
          <width>550</width>
          <align>right</align>
          <itemgap>30</itemgap>
          <orientation>horizontal</orientation>
          <include>VideoCodecFlaggingConditions</include>
          <include>AudioCodecFlaggingConditions</include>
          <include>AspectCodecFlaggingConditions</include>
        </control>
      </control>
      <!-- TV Show info down the bottom -->
      <control type="group">
        <posx>30</posx>
        <posy>625</posy>
        <visible>[Control.IsVisible(513) | Container.Content(TVShows)] + !Container.Content(Movies)</visible>
        <control type="label">
          <description>Genre</description>
          <posx>0</posx>
          <posy>-20</posy>
          <width>700</width>
          <height>25</height>
          <label fallback="416">$INFO[listitem.genre]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>cirrus_24</font>
          <scroll>true</scroll>
        </control>
        <control type="label">
          <description>Episodes</description>
          <posx>0</posx>
          <posy>15</posy>
          <width>580</width>
          <height>25</height>
          <label fallback="416">[COLOR=orange]$LOCALIZE[20360]: [/COLOR]$INFO[listitem.episode] [COLOR=grey] ($INFO[ListItem.Property(WatchedEpisodes),, $LOCALIZE[16102]] - $INFO[ListItem.Property(UnWatchedEpisodes), , $LOCALIZE[16101]])[/COLOR]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>cirrus_30</font>
          <scroll>true</scroll>
        </control>
        <control type="label">
          <description>First Aired</description>
          <posx>0</posx>
          <posy>55</posy>
          <width>440</width>
          <height>25</height>
          <label fallback="416">[COLOR=orange]$LOCALIZE[20416]: [/COLOR]$INFO[listitem.premiered]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>cirrus_24</font>
          <scroll>true</scroll>
        </control>
        <control type="image">
          <width>146</width>
          <height>100</height>
          <posx>430r</posx>
          <posy>-23</posy>
          <fadetime>100</fadetime>
          <aspectratio>keep</aspectratio>
          <texture>$INFO[listitem.Studio,flagging/studios/,.png]</texture>
        </control>
        <!-- TV SHOW LOGO -->
        <control type="largeimage" id="7914"> 
          <posx>260r</posx> 
          <posy>-20</posy> 
          <width>232</width> 
          <height>90</height> 
          <texture fallback="notvshowlogo.png">$INFO[ListItem.path]logo.png</texture> 
          <fadetime>100</fadetime> 
          <aspectratio scalediffuse="false">keep</aspectratio> 
          <visible></visible> 
        </control>      
      </control>
    </control>
  </include>
</includes>
