<window id="0">

<defaultcontrol always="true">8999</defaultcontrol>
<allowoverlay>no</allowoverlay>  
 
<controls>
	<!-- NORMAL BACKDROPS -->
    <control type="multiimage">
		<visible>!Skin.HasSetting(homepageRandomFanart)</visible>
		<posx>0</posx>
		<posy>0</posy>
		<width>1280</width>
		<height>720</height>
		<imagepath background="true">$INFO[Container(9000).ListItem.Icon]</imagepath>
		<timeperimage>8000</timeperimage>
		<randomize>true</randomize>
		<fadetime>500</fadetime>
    </control>
	<!-- RANDOM FANART BACKDROPS -->
    <control type="multiimage">
		<visible>Skin.HasSetting(homepageRandomFanart)</visible>
		<posx>0</posx>
		<posy>0</posy>
		<width>1280</width>
		<height>720</height>
		<imagepath background="true">special://profile/Thumbnails/Video/Fanart</imagepath>
		<timeperimage>8000</timeperimage>
		<randomize>true</randomize>
		<fadetime>500</fadetime>
    </control>
  
    <include>CommonMediaPlayingBackground</include>
    <include condition="Skin.HasSetting(homepageHideRecentlyAdded)">HomeRecentlyAddedInfo</include>
    <include condition="!Skin.HasSetting(horzHomeMenu)">HomeNowPlaying</include>
    <include condition="Skin.HasSetting(horzHomeMenu)">HomeNowPlayingHorz</include>

    <control type="group">
  
    <!-- SUBMENUS -->
    <include condition="!Skin.HasSetting(horzHomeMenu)">HomeSubmenu</include>
    <include condition="Skin.HasSetting(horzHomeMenu) + !Skin.HasSetting(horzLowHomeMenu)">HomeHorzSubmenu</include>
    <include condition="Skin.HasSetting(horzHomeMenu) + Skin.HasSetting(horzLowHomeMenu)">HomeHorzLowSubmenu</include>

    <!-- RECENTLY ADDED -->
    <control type="button" id="8999">
      <description>Run Recently added</description>
      <posx>-20</posx>
      <posy>-20</posy>
      <width>1</width>
      <height>1</height>
      <label>-</label>
      <font>-</font>
      <onfocus>XBMC.RunScript(script.recentlyadded,limit=3&amp;totals=True&amp;albums=True&amp;unplayed=True)</onfocus>
      <onfocus>SetFocus(9000)</onfocus>
      <texturenofocus>-</texturenofocus>
      <texturefocus>-</texturefocus>
      <visible>Skin.HasSetting(homepageHideRecentlyAdded)</visible>
    </control>
    <control type="button" id="8999">
      <description>Don't run Recently added</description>
      <posx>-20</posx>
      <posy>-20</posy>
      <width>1</width>
      <height>1</height>
      <label>-</label>
      <font>-</font>
      <onfocus>SetFocus(9000)</onfocus>
      <texturenofocus>-</texturenofocus>
      <texturefocus>-</texturefocus>
      <visible>!Skin.HasSetting(homepageHideRecentlyAdded)</visible>
    </control>

    <!-- MAIN MENUS -->
    <include condition="!Skin.HasSetting(horzHomeMenu)">HomeMainMenu</include>
    <include condition="Skin.HasSetting(horzHomeMenu)">HomeMainMenuHorz</include>


    <control type="image">
      <description>LOGO</description>
      <posx>10</posx>
      <posy>10</posy>
      <width>160</width>
      <height>40</height>
      <texture>xbmc_logo_white.png</texture>
      <visible>!Skin.HasSetting(cleanHome)</visible>
      <visible>!Skin.HasSetting(horzHomeMenu)</visible>
    </control>
    <control type="image">
      <description>LOGO Mirror</description>
      <posx>10</posx>
      <posy>42</posy>
      <width>160</width>
      <height>40</height>
      <texture diffuse="diffuse_mirror.png" flipy="true">xbmc_logo_white.png</texture>
      <visible>!Skin.HasSetting(cleanHome)</visible>
	  <visible>!Skin.HasSetting(horzHomeMenu)</visible>
    </control>

    <!-- BUTTONS BOTTOM LEFT (not visible if cleanHome selected -->
    <control type="group" id="10">
      <posx>15</posx>
      <posy>55r</posy>
	  <visible>!Skin.HasSetting(horzHomeMenu)</visible>
	  <visible>!Skin.HasSetting(cleanHome)</visible>
      <control type="button" id="20">
        <description>Power push button</description>
        <posx>90</posx>
        <posy>0</posy>
        <width>43</width>
        <height>43</height>
        <label>-</label>
        <font>-</font>
        <aligny>-</aligny>
        <onclick>ActivateWindow(ShutdownMenu)</onclick>
        <texturefocus>homepowerbuttonFO.png</texturefocus>
        <texturenofocus>homepowerbuttonNF.png</texturenofocus>
        <onleft>21</onleft>
        <onright>9000</onright>
        <onup>9000</onup>
        <ondown>9000</ondown>
      </control>
      <control type="button" id="21">
        <description>Favourites push button</description>
        <posx>45</posx>
        <posy>0</posy>
        <width>43</width>
        <height>43</height>
        <label>-</label>
        <font>-</font>
        <aligny>-</aligny>
        <onclick>ActivateWindow(Favourites)</onclick>
        <texturefocus>homefavouritesbuttonFO.png</texturefocus>
        <texturenofocus>homefavouritesbuttonNF.png</texturenofocus>
        <onleft>22</onleft>
        <onright>20</onright>
        <onup>9000</onup>
        <ondown>9000</ondown>
      </control>
      <control type="button" id="22">
        <description>Play Disc Media push button</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>43</width>
        <height>43</height>
        <label>-</label>
        <font>-</font>
        <aligny>-</aligny>
        <onclick>XBMC.PlayDVD()</onclick>
        <texturefocus>homeplaybuttonFO.png</texturefocus>
        <texturenofocus>homeplaybuttonNF.png</texturenofocus>
        <onleft>9000</onleft>
        <onright>21</onright>
        <onup>9000</onup>
        <ondown>9000</ondown>
        <visible>System.HasMediaDVD</visible>
      </control>
      <control type="button" id="22">
        <description>Play Disc Media push button</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>43</width>
        <height>43</height>
        <label>-</label>
        <font>-</font>
        <aligny>-</aligny>
        <onclick>ActivateWindow(1113)</onclick>
        <texturefocus>homeplaybuttonFO.png</texturefocus>
        <texturenofocus>homeplaybuttonNF.png</texturenofocus>
        <onleft>9000</onleft>
        <onright>21</onright>
        <onup>9000</onup>
        <ondown>9000</ondown>
        <visible>!System.HasMediaDVD</visible>
      </control>
    </control>
    </control>

  <!-- RSS -->
  <control type="group">
    <posx>140</posx>
    <posy>15</posy>
    <control type="image">
      <posx>-140</posx>
      <posy>28r</posy>
      <width>1280</width>
      <height>105</height>
      <texture>horzmenuback.png</texture>
      <visible>Skin.HasSetting(horzHomeMenu) + Skin.HasSetting(horzLowHomeMenu)</visible>
    </control>
    <control type="rss">
      <description>RSS feed</description>
      <posx>1280r</posx>
      <posy>25r</posy>
      <height>35</height>
      <width>1280</width>
      <font>font12</font>
      <urlset>1</urlset>
      <textcolor>orange</textcolor>
      <titlecolor>orange</titlecolor>
      <headlinecolor>white</headlinecolor>
      <visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
    </control>
    </control>
  
  <!-- Weather, time etc VERT MENU -->
    <control type="group">
    <visible>!Skin.HasSetting(homeNoClock) + !Skin.HasSetting(horzHomeMenu)</visible>
    <posx>60r</posx>
    <posy>200r</posy>
    <width>500</width>
    <align>right</align>
    <control type="label">
      <description>time label</description>
      <posx>20</posx>
      <posy>10</posy>
      <width>500</width>
      <height>28</height>
      <align>right</align>
      <aligny>top</aligny>
      <font>cirrus_50</font>
      <textcolor>white</textcolor>
      <shadowcolor>black</shadowcolor>
      <label>$INFO[System.Time]</label>
    </control>
    <control type="label">
      <description>time label</description>
      <posx>20</posx>
      <posy>75</posy>
      <width>500</width>
      <height>28</height>
      <align>right</align>
      <aligny>center</aligny>
      <font>cirrus_30</font>
      <textcolor>white</textcolor>
      <shadowcolor>black</shadowcolor>
      <label>[COLOR=grey]$INFO[System.Date][/COLOR]</label>
    </control>      

    <!-- weather Info -->
    <control type="group">
      <posx>800r</posx>
      <posy>110</posy>
      <align>right</align>
      <!-- <visible>!Skin.HasSetting(homepageWeatherinfo) + Weather.IsFetched</visible> -->
      <visible>Weather.IsFetched</visible>
      <control type="image">
        <description>Weather image</description>
        <posx>270</posx>
        <posy>10</posy>
        <width>50</width>
        <height>50</height>
        <aspectratio>keep</aspectratio>
        <texture>$INFO[Weather.Conditions]</texture>
      </control>
      <control type="label">
        <description>temp label</description>
        <posx>260</posx>
        <posy>20</posy>
        <width>200</width>
        <height>28</height>
        <align>right</align>
        <aligny>center</aligny>
        <font>cirrus_30</font>
        <textcolor>white</textcolor>
        <shadowcolor>black</shadowcolor>
        <label>$INFO[Weather.Temperature]</label>
      </control>
    </control>
    </control>
  <!-- LOW HORZ menu -->
    <control type="group">
    <visible>!Skin.HasSetting(homeNoClock) + Skin.HasSetting(horzHomeMenu)</visible>
    <posx>30</posx>
    <posy>20</posy>
    <width>500</width>
    <align>left</align>
    <control type="label">
      <description>time label</description>
      <posx>0</posx>
      <posy>10</posy>
      <width>500</width>
      <height>28</height>
      <align>left</align>
      <aligny>top</aligny>
      <font>cirrus_50</font>
      <textcolor>white</textcolor>
      <shadowcolor>black</shadowcolor>
      <label>$INFO[System.Time]</label>
    </control>
    <control type="label">
      <description>time label</description>
      <posx>0</posx>
      <posy>75</posy>
      <width>500</width>
      <height>28</height>
      <align>left</align>
      <aligny>center</aligny>
      <font>cirrus_30</font>
      <textcolor>white</textcolor>
      <shadowcolor>black</shadowcolor>
      <label>[COLOR=grey]$INFO[System.Date][/COLOR]</label>
    </control>      

    <!-- weather Info -->
    <control type="group">
      <posx>0</posx>
      <posy>110</posy>
      <align>left</align>
      <visible>Weather.IsFetched</visible>
      <!-- <visible>!Skin.HasSetting(homepageWeatherinfo) + Weather.IsFetched</visible> -->
      <control type="image">
        <description>Weather image</description>
        <posx>0</posx>
        <posy>10</posy>
        <width>50</width>
        <height>50</height>
        <aspectratio>keep</aspectratio>
        <texture>$INFO[Weather.Conditions]</texture>
      </control>
      <control type="label">
        <description>temp label</description>
        <posx>60</posx>
        <posy>20</posy>
        <width>200</width>
        <height>28</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>cirrus_30</font>
        <textcolor>white</textcolor>
        <shadowcolor>black</shadowcolor>
        <label>$INFO[Weather.Temperature]</label>
      </control>
    </control>
    </control>
  
  
</controls>
</window>
