<includes>
	<include name="HomeMainMenuHorzLow">

		<!-- Background for low hoizontal menu -->
		<control type="image">
			<posx>0</posx>
			<posy>100r</posy>
			<width>1280</width>
			<height>105</height>
			<texture>horzmenuback.png</texture>
			<visible>Skin.HasSetting(horzHomeMenu) + Skin.HasSetting(horzLowHomeMenu)</visible>
