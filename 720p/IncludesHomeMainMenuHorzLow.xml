                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                    <animation effect="fade" start="10" end="10" time="0" condition="true">Conditional</animation>
                </control>
   			</focusedlayout>
			
