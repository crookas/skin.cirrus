<includes>
<!-- ===================================================================================== -->
<!-- ============================== HALF WALL VIEW ID 514 ================================ -->
<!-- =================================== Movies Only ===================================== -->
  <include name="HalfWallView">
    <control type="group">
      <visible>Control.IsVisible(514)</visible>
      <control type="image"> <!-- darken the background a bit -->
        <posx>0</posx>
        <posy>0</posy>
        <width>660</width>
        <height>720</height>
        <aspectratio>stretch</aspectratio>
         <texture>black-back.png</texture>
      </control>
      <control type="image"> <!-- right panel behind the wall -->
        <posx>620r</posx>
        <posy>0</posy>
        <width>620</width>
        <height>720</height>
        <texture border="15,0,0,0">homesubbackground.png</texture>
      </control>
      <!-- PANEL -->
      <control type="panel" id="514">
        <posx>670</posx>
        <posy>50</posy>
        <width>680</width>
        <height>650</height>
        <onleft>4</onleft>
        <onright>60</onright>
        <onup>514</onup>
        <ondown>514</ondown>
        <viewtype label="HalfWallView">panel</viewtype>
        <pagecontrol>60</pagecontrol>
        <scrolltime>200</scrolltime>
        <preloaditems>200</preloaditems>
        <visible>Container.Content(Movies)</visible>
        <itemlayout height="216" width="144">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>144</width>
            <height>216  </height>
            <bordersize>5</bordersize>
            <aspectratio>stretch</aspectratio>
            <fadetime>200</fadetime>
            <texture background="true" diffuse="maskposter.png">$INFO[Listitem.Icon]</texture> 
          </control>
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>144</width>
            <height>216  </height>
            <bordersize>5</bordersize>
            <aspectratio>stretch</aspectratio>
            <fadetime>200</fadetime>
            <texture background="true" diffuse="maskposter.png">GlassOverlay2.png</texture> 
          </control>
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>144</width>
            <height>216  </height>
            <bordersize>5</bordersize>
            <aspectratio>stretch</aspectratio>
            <fadetime>200</fadetime>
            <texture background="true" diffuse="maskposter.png">black-back3.png</texture> 
          </control>
        </itemlayout>
        <focusedlayout height="323" width="225">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>144</width>
            <height>216  </height>
            <bordersize>5</bordersize>
            <aspectratio>stretch</aspectratio>
            <fadetime>200</fadetime>
            <texture background="true" diffuse="maskposter.png">$INFO[Listitem.Icon]</texture> 
          </control>
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>144</width>
            <height>216  </height>
            <bordersize>5</bordersize>
            <aspectratio>stretch</aspectratio>
            <fadetime>200</fadetime>
            <texture background="true" diffuse="maskposter.png">GlassOverlay2.png</texture> 
          </control>
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>144</width>
            <height>216  </height>
            <bordersize>5</bordersize>
            <aspectratio>stretch</aspectratio>
            <fadetime>200</fadetime>
            <texture>folder-focuswhiteroundedportrait.png</texture> 
          </control>
        </focusedlayout>
      </control>
      <control type="group"> <!-- Labels -->
        <posx>20</posx>
        <posy>120</posy>
        <visible>Container.Content(Movies)</visible>
        <control type="fadelabel">
          <posx>0</posx>
          <posy>0</posy>
          <width>620</width>
          <height>30</height>
          <font>cirrus_40</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
          <scroll>true</scroll>
          <align>left</align>
          <aligny>center</aligny>
          <label>$INFO[ListItem.Title]</label>
          <scrollout>false</scrollout>
          <pauseatend>2000</pauseatend>
        </control>
        <control type="label">
          <posx>0</posx>
          <posy>40</posy>
          <width>380</width>
          <height>30</height>
          <font>cirrus_24</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
          <scroll>false</scroll>
          <align>left</align>
          <aligny>center</aligny>
          <label>$INFO[ListItem.Genre,[COLOR=orange]$LOCALIZE[515]:[/COLOR] ]</label>
          <scrollout>false</scrollout>
          <pauseatend>2000</pauseatend>
        </control>
        <control type="fadelabel">
          <posx>0</posx>
          <posy>80</posy>
          <width>220</width>
          <height>30</height>
          <font>cirrus_30</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
          <scroll>true</scroll>
          <align>left</align>
          <aligny>center</aligny>
          <label>[COLOR=orange]$INFO[ListItem.Year][/COLOR] $INFO[ListItem.Duration]</label>
          <scrollout>false</scrollout>
          <pauseatend>2000</pauseatend>
          <visible>SubString(ListItem.Duration,min)</visible>
        </control>
        <control type="fadelabel">
          <posx>0</posx>
          <posy>80</posy>
          <width>220</width>
          <height>30</height>
          <font>cirrus_30</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
          <scroll>true</scroll>
          <align>left</align>
          <aligny>center</aligny>
          <label>[COLOR=orange]$INFO[ListItem.Year][/COLOR] $INFO[ListItem.Duration] mins</label>
          <scrollout>false</scrollout>
          <pauseatend>2000</pauseatend>
          <visible>!SubString(ListItem.Duration,min)</visible>
        </control>
        <control type="textbox">
          <description>Movie Plot</description>
          <posx>0</posx>
          <posy>120</posy>
          <width>620</width>
          <height>90</height>
          <font>cirrus_16</font>
          <align>justify</align>
          <textcolor>white</textcolor>
          <label>$INFO[ListItem.Plot]</label>
          <autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
        </control>
      </control>
      <control type="grouplist">
        <description>MPAA Rating Flagging Images</description>
        <posx>390</posx>
        <posy>20</posy>
        <width>249</width>
        <align>left</align>
        <itemgap>0</itemgap>
        <orientation>horizontal</orientation>
        <include>VideoMPAAFlaggingConditions</include>
      </control>
      <control type="group"> <!-- Fanart and media flags -->
        <posx>10</posx>
        <posy>330</posy>
        <width>640</width>
        <height>360</height>
        <control type="image">
          <posx>0</posx>
          <posy>10</posy>
          <width>640</width>
          <height>360</height>
          <aspectratio aligny="bottom">stretch</aspectratio>
          <fadetime>IconCrossfadeTime</fadetime>
          <texture background="true" diffuse="maskfanart.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
        </control>
        <control type="image">
          <posx>0</posx>
          <posy>10</posy>
          <width>640</width>
          <height>360</height>
          <aspectratio aligny="top">stretch</aspectratio>
          <fadetime>IconCrossfadeTime</fadetime>
          <texture diffuse="maskfanart.png">GlassOverlay2.png</texture>
        </control>
        <control type="image">
          <posx>0</posx>
          <posy>11</posy>
          <width>640</width>
          <height>360</height>
          <aspectratio aligny="bottom">keep</aspectratio>
          <fadetime>IconCrossfadeTime</fadetime>
          <texture background="true" diffuse="maskfanart.png">videoinfobottom.png</texture>
        </control>
        <control type="image">
          <posx>0</posx>
          <posy>10</posy>
          <width>640</width>
          <height>360</height>
          <aspectratio aligny="bottom">stretch</aspectratio>
          <fadetime>IconCrossfadeTime</fadetime>
          <texture>border-fanart.png</texture>
        </control>
        <control type="grouplist">
          <description>Media Codec Flagging Images</description>
          <posx>0</posx>
          <posy>332</posy>
          <width>640</width>
          <align>center</align>
          <itemgap>30</itemgap>
          <orientation>horizontal</orientation>
          <include>VideoCodecFlaggingConditions</include>
          <include>AudioCodecFlaggingConditions</include>
          <include>AspectCodecFlaggingConditions</include>
        </control>
      </control>
      <control type="image">
        <description>Rating value</description>
        <posx>390</posx>
        <posy>190</posy>
        <align>center</align>
        <width>249</width>
        <height>40</height>
        <aspectratio>keep</aspectratio>
        <texture>$INFO[Listitem.StarRating]</texture>
      </control>
      <control type="scrollbar" id="60">
        <posx>1249</posx>
        <posy>36</posy>
        <width>25</width>
        <height>650</height>
        <texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
        <texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
        <texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
        <textureslidernib>ScrollBarNib.png</textureslidernib>
        <textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
        <onleft>513</onleft>
        <onright>513</onright>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
      </control>
    </control>
  </include>
</includes>
